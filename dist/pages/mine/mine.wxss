.mine {
  margin: 30rpx;
  border: 1rpx solid #ddd;
  text-align: center;
  height: 90vh;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.mine-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.mine-nickName {
  font-size: 40;
  margin-top: 20rpx;
}
.mine-username {
  font-size: 32rpx;
  margin-top: 16rpx;
  color: #777;
}
.mine-footer {
  font-size: 28rpx;
  color: #777;
  margin-bottom: 20rpx;
}